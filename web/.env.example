# Copy to .env.local and fill your key
OPENAI_API_KEY=

# Public app URL used for redirects (e.g., http://localhost:3000 or https://your-app.vercel.app)
NEXT_PUBLIC_APP_URL=

# Stripe credentials
# Create at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
# (Optional) Publishable key for client-side Stripe.js integrations
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Webhook secret from the endpoint configured at https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=

# Price IDs from Stripe Dashboard (Products > Prices)
# For monthly subscription (recurring price)
STRIPE_PRICE_MENSAL=
# For lifetime one-time payment (one-time price)
STRIPE_PRICE_LIFETIME=

# Optional: First month promo for monthly plan (R$ 29,90)
# Create in Stripe: Coupons → New → amount_off=2000, currency=brl, duration=once
STRIPE_COUPON_MENSAL_FIRST_MONTH=
# Alternatively, if you created a Promotion Code instead of using the Coupon directly:
STRIPE_PROMO_MENSAL_FIRST_MONTH=

# Enforce Stripe (no fallback to Kiwify on /plans)
NEXT_PUBLIC_STRIPE_REQUIRED=false

